<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btnDoacaoRemover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTitleDoadorNome"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textAlignment="viewStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTitleDoadorTel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Telefone"
            android:textAlignment="viewStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTitleDoadorEspecie"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Espécie"
            android:textAlignment="viewStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTitleDoadorQuantidade"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Qtde"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNomeDoador"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Nome" />

        <TextView
            android:id="@+id/txtTelefoneDoador"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="999913426"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/txtEspecieDoador"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Resendá" />

        <TextView
            android:id="@+id/txtQuantidadeDoador"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="30"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonDoacaoRemover"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Remover" />

    </LinearLayout>

</LinearLayout>