<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context=".RegisterActivity">
    <TextView
        android:id="@+id/txtRegisterReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registrar"
        android:textAlignment="center"
        android:textColor="@color/midBrown"
        android:textSize="24sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edtNomeReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:autofillHints="nome"
        android:hint="@string/nomereg"
        android:height="48dp"
        android:text="" />
    <EditText
        android:id="@+id/edtSobrenomeReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/sobrenomereg"
        android:autofillHints="sobrenome"
        android:height="48dp"
        android:text="" />
    <EditText
        android:id="@+id/edtLoginReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/loginreg"
        android:autofillHints="login"
        android:height="48dp"
        android:text="" />
    <EditText
        android:id="@+id/edtDataNascimentoReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/datanascimentoreg"
        android:autofillHints="datanascimento"
        android:height="48dp"
        android:inputType="date" />
    <EditText
        android:id="@+id/edtEmailReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:autofillHints="email"
        android:hint="@string/emailreg"
        android:height="48dp"
        android:text="" />
    <EditText
        android:id="@+id/edtFoneReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/fonereg"
        android:autofillHints="fone"
        android:height="48dp"
        android:inputType="phone" />
    <EditText
        android:id="@+id/edtSenhaReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/senhareg"
        android:autofillHints="senha"
        android:height="48dp"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/edtSenhaConfirmacaoReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/senhaconfirmacaoreg"
        android:autofillHints="senhaconfirmacao"
        android:height="48dp"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/btnRegisterReg"
        android:layout_width="match_parent"
        android:backgroundTint="@color/midGreen"
        android:layout_height="wrap_content"
        android:text="@string/registrarreg" />
    <Button
        android:id="@+id/btnLoginReg"
        android:layout_width="match_parent"
        android:backgroundTint="@color/baseGreen"
        android:layout_height="wrap_content"
        android:text="@string/loginreg" />
</LinearLayout>